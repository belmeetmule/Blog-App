<section class="container w-50">
<h2 class="text-center">Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class:'devise-form'}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="form-group">
    <%= f.label :"Full Name" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "w-100" %>
  </div>
  <div class="form-group">
    <%= f.label :"Biography" %><br />
    <%= f.text_area :bio,  class: "form-control", autocomplete: "bio", rows: "7" %>
  </div>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100" %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "w-100" %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-100" %>
  </div>
  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary w-100" %>
  </div>
<% end %>
<div class="text-center mt-5">
    <%= render "devise/shared/links" %>
</div>
</section>
