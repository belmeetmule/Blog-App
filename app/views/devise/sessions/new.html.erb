<section class=" d-flex flex-column min-vh-100 align-items-center justify-content-center bg-grey">
  <div class="text-center">
    <h1 class="text-dark">Welcome to Z-Blog</h1>
    <p class="text-dark">Sign in to see the posts</p>
  </div>
  <div class="p-5 border">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: "email", autocomplete: "email", class: "form-control-lg" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, placeholder:"password", autocomplete: "current-password", class: "form-control-lg" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group form-check">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      
        <%= f.submit "Log in", class: "btn btn-primary w-100" %>
      
    <% end %>
  </div>
    <div class="col-12 mt-4 text-center">
      <%= render "devise/shared/links" %>
    </div>
  
</section>
