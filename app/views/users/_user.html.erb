<%= link_to user_path(user) do %>
    <li class="user">
      <div class="user-image">
        <%= image_tag user.photo, alt: "#{user.name}-avatar", class: 'profile-pic' %>
      </div>
      <div class="user-info">
        <h2 class="username"><%= user.name %></h2>
        <span class="count">Number of posts: <% if (user.posts_counter == nil) %>
        <%= 0 %>
        <% else %>
        <%= user.posts_counter %>
        <% end %>
        </span>
      </div>
    </li>
  <% end %>