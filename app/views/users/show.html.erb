<% content_for :title, "#{@user.name}'s - Blog" %>
<%= render 'user_info' %>

<section class="container">
  <div style="background-color: #FFE6C1">
    <%= render "user", user: @user %>
    <h3 class="mt-3 px-3">Bio</h3>
    <p class="card-text p-3"><%= @user.bio %></p>
    
  </div>
  <h3 class="mt-5 text-secondary">Recent posts</h3>
  <% @user.recent_three.each do |post| %>
    <%= link_to user_post_path(@user, post) do %>
      <%= render "posts/post", post: post %>
    <% end %>
  <% end %>
  
  <div class="d-flex justify-content-center mt-3 mb-5">
  <%= link_to user_posts_path(@user) do %>
    <button type="button" class= 'btn btn-primary'>See all posts</button>
  <% end %>
</section>