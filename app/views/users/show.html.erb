<% content_for :title, "#{@user.name}'s - Blog" %>
<h1>Users#show</h1>
<section class="main-container">
  <%= render "user", user: @user %>
  <div class="bio">
    <h3>Bio<h3>
    <p><%= @user.bio %></p>
  </div>
  <%= link_to new_user_post_path(@user) do %>
    <button type="button" class="main-button">New post</button>
  <% end %>

  <% @user.recent_three.each do |post| %>
    <%= link_to user_post_path(@user, post) do %>
      <%= render "posts/post", post: post %>
    <% end %>
  <% end %>
  
  <%= link_to user_posts_path(@user), class: 'button-center' do %>
    <button type="button" class="see-all-posts">See all posts</button>
  <% end %>
</section>